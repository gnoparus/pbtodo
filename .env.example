# PocketBase Configuration
# The URL of your PocketBase server
VITE_POCKETBASE_URL=http://127.0.0.1:8090

# Security Configuration
# Enable HTTPS in production (set to 'true' for production)
VITE_HTTPS_ENABLED=false

# Session Configuration
# Session timeout in minutes (default: 24 hours)
VITE_SESSION_TIMEOUT_MINUTES=1440

# Password Requirements
# Minimum password length (default: 8)
VITE_MIN_PASSWORD_LENGTH=8

# Require password complexity (default: true)
VITE_REQUIRE_PASSWORD_COMPLEXITY=true

# Rate Limiting
# Maximum login attempts per minute (default: 5)
VITE_MAX_LOGIN_ATTEMPTS_PER_MINUTE=5

# Development Mode
# Set to 'false' for production builds
VITE_DEV_MODE=true

# CORS Configuration
# Comma-separated list of allowed origins in production
VITE_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Feature Flags
# Enable advanced security features
VITE_ENABLE_SECURITY_HEADERS=true
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
